{
    "root": true,
    "ignorePatterns": [
        "dist/**/*",
        "node_modules/**/*",
        "**/*.html",
        "**/*.spec.ts",
        "**/*.e2e-spec.ts"
    ],
    "overrides": [
        {
            "files": [
                "src/**/*.ts"
            ],
            "parser": "@typescript-eslint/parser",
            "plugins": ["@angular-eslint"],
            "extends": [
                "eslint:recommended"
            ],
            "rules": {
                "@angular-eslint/directive-selector": "off",
                "@angular-eslint/component-selector": "off",
                "no-unused-vars": "warn",
                "no-undef": "warn",
                "no-console": "off"
            }
        },
        {
            "files": [
                "projects/**/*.ts"
            ],
            "parser": "@typescript-eslint/parser",
            "plugins": ["@angular-eslint"],
            "extends": [
                "eslint:recommended"
            ],
            "rules": {
                "@angular-eslint/directive-selector": "off",
                "@angular-eslint/component-selector": "off",
                "no-unused-vars": "warn",
                "no-undef": "warn",
                "no-console": "off"
            }
        },
        {
            "files": [
                "e2e/**/*.ts"
            ],
            "extends": [
                "eslint:recommended"
            ],
            "rules": {
                "no-undef": "off"
            }
        }
    ]
}
